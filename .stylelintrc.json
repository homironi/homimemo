{
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "color-function-alias-notation": "with-alpha",
        "color-hex-length": "long",
        "custom-property-empty-line-before": [
            "always",
            {
                "except": [
                    "after-custom-property",
                    "first-nested"
                ]
            }
        ]
    }
}