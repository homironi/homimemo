---
layout: base.njk
headerImg: default.webp
---
{# css #}
{% block css -%}
    <link rel="stylesheet" href="/styles/column3.css" />
    <link rel="stylesheet" href="/styles/article.css" />
    <link rel="stylesheet" href="/styles/textContent.css" />
    <link rel="stylesheet" href="/styles/tableOfContent.css" />
    <link rel="stylesheet" href="/styles/categoryDisplay.css" />
    <link rel="stylesheet" href="/styles/tagsDisplay.css" />
    {%- endblock%}
    <main class="main-container">
        <div class="side-l-wrapper">
            <div class="side-l-inner">
                {% include "shareButtons.njk" %}
                {% include "toc.njk" %}
                <a href="https://px.a8.net/svt/ejp?a8mat=3ZFGW2+FWR0QA+CO4+67C4H" rel="nofollow">
                    <img loading="lazy" border="0" width="100" height="60" alt="" src="https://www29.a8.net/svt/bgt?aid=240906818962&wid=001&eno=01&mid=s00000001642001042000&mc=1"></a>
                <img loading="lazy" border="0" width="1" height="1" src="https://www17.a8.net/0.gif?a8mat=3ZFGW2+FWR0QA+CO4+67C4H" alt="">
            </div>
        </div>
        <div class = "container-r-wrapper">
            <div class="content-wrapper">
                <div class="article-inner">
                    <section class="articleHeader">
                        {% include "breadcrumb.njk" %}
                        {% import "categoryDisplay.njk" as categoryDisplay %}
                        {{categoryDisplay.categoryDisplay(categoryName)}}
                        {% if tags %}
                            {% include "tagsDisplay.njk" %}
                        {% endif %}
                        <div class = "article-date-wrapper">
                            {# 公開日 #}
                            <time datetime={{page.date | dateFormat}} class = "article-date">
                                <span class = "publication-date material-symbols-outlined"></span>
                                <span>{{page.date | dateFormat | dateFormatJapanese}}</span>
                            </time>
                            {% if lastEditDate%}
                                {# 更新日 #}
                                <time datetime={{lastEditDate | dateFormat}} class = "article-date">
                                    <span class="last-edit-date material-symbols-outlined"></span>
                                    <span>{{lastEditDate | dateFormat | dateFormatJapanese}}</span>
                                </time>
                            {% endif %}
                        </div>
                        <div class="text-block text-block--info">
                            当サイトは広告を含んでいます。おすすめの商品や、おいしかったものを紹介しています。<br />
                            別途タイトルなどで【PR】のように明記されていない場合、記事の本題は広告とは関係ありません。<br />
                            詳細は「<a href="/privacyPolicy/#広告について" class="external-link" target="blank">プライバーポリシー＃広告について</a>」をご覧ください。
                        </div>
                        <h1 class = "column-title">{{ title }}</h1>
                        {%if headerImg%}
                            {# 記事のヘッダー画像 #}
                            <div class="resizable-img article-header-image">
                                <img loading="lazy" src= {{headerImg}} alt="記事のヘッダー画像/>
                            </div>
                            {%endif%}
                        </section>
                        {% include "toc.njk" %}
                        <section class="content-container">
                                <article class="main-article">
                                    {# 記事内容が入ります #}
                                    {{content | safe}}
                                </article>
                            </section>
                            <hr>
                            <section class="article-footer">
                                {% include "shareButtons.njk" %}
                                {% include "categoryList.njk" %}
                            </section>
                        </div>
                    </div>
                    <div class="side-r-wrapper">
                        {% include "sideRInner.njk" %}
                    </div>
                </div>
            </main>