---
layout: base.njk
eleventyNavigation:
    parent: カテゴリ一覧
    order: 0
pagenation:
    date: collections
    size: 1
    alias: category
---
{# css #}
{% block css -%}
<link rel="stylesheet" href="/styles/categoryListLayout.css" />
<link rel="stylesheet" href="/styles/categoryListThema.css" />
{%- endblock%}

<main class="mainContainer">
        <div class="contentWrapper">
            <article class="articleInner">
                <div class="articleHeader">
                    {% include "breadcrumb.njk" %}
                    <h1>{{title}}カテゴリ一覧</h1>
                </div>
                <section class="content">
                    {% set postList = collections[ category ] %}
                    {%- for post in postList | reverse %}
                      <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
                    {%- endfor %}
                    {{content | safe}}
                    {% include "shareButtons.njk" %}
                </section>
            </article>
        </div>
    </main>