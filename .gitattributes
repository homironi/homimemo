# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files you want to always be normalized and converted to LF
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mts text eol=lf
*.json text eol=lf
*.jsonc text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.webp binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Language-specific settings for better diff
*.ts diff=typescript
*.tsx diff=typescript
*.js diff=javascript
*.jsx diff=javascript
*.json diff=json
*.md diff=markdown

# Lock files should not be normalized
pnpm-lock.yaml -text
package-lock.json -text
yarn.lock -text
