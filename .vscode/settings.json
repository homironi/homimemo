{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.stylelint": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "typescript",
        "typescriptreact",
        "javascriptreact",
        "markdown",
        "mdx"
    ],
    "stylelint.validate": [
        "css",
        "scss",
        "sass",
        "less",
        "postcss"
    ],
    "editor.tabSize": 2,
    "[mdx]": {
        "editor.tabSize": 4
    }
}