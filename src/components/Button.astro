---
import type { HTMLAttributes } from "astro/types";

export type ButtonVariants = "outlined" | "filled" | "text";
interface Props extends HTMLAttributes<"button"> {
  variant?: ButtonVariants;
};

const buttonVariantClassName: { [key in ButtonVariants]: string } = {
  outlined: "outlined",
  filled: "filled",
  text: "text",
};

const { variant, ...props } = Astro.props;

const className = `button ${ buttonVariantClassName[variant ?? "filled"] }`;
---

<button
  { ...props }
  class={ className }
>
  <slot/>
</button>

<style>
  .button{
    padding: 8px 12px;
    border-radius: var(--border-radius);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .button:disabled {
    cursor: not-allowed;
    opacity: 0.7;
  }

  .filled{
    background-color: var(--color-main);
    border: none;
    border-radius: var(--border-radius);
  }

  .outlined{
    background-color: unset;
    border: 2px solid var(--border-color-main);
  }

  .text{
    border: none;
    background: none;
  }

  .filled:hover,
  .outlined:hover,
  .text:hover {
    background-color: var(--color-main-hover);
  }
</style>
