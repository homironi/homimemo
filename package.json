{
  "name": "homimemo",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "pnpm run build:json && run-p dev:*",
    "dev:next": "next dev",
    "build": "run-s build:*",
    "build:tcm": "tcm -p \"src/**/*.module.css\"",
    "build:json": "run-p build-json:*",
    "build:rss": "tsx scripts/generateRss.ts",
    "dev:rss": "pnpm run build:rss && chokidar \"scripts/generateRss.ts\" \"public/generated/meta/articles.json\" -c \"pnpm run build:rss\"",
    "build:redirects": "tsx scripts/generateRedirects.ts",
    "build:next": "next build",
    "build-json:article-meta": "run-s build-json-pre-article build-json-article",
    "build-json-pre-article": "run-p build-json-pre-article:*",
    "start": "next start",
    "preview": "pnpm run build && wrangler dev",
    "lint-all": "run-p lint lint:*",
    "lint-all-fix": "run-p lint-fix lint-fix:*",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint:style": "stylelint \"src/**/*.css\"",
    "lint-fix:style": "stylelint \"src/**/*.css\" --fix",
    "add:article-id": "tsx scripts/article/addMissingIds.ts",
    "storybook": "pnpm run build:json && storybook dev -p 6006",
    "build-storybook": "pnpm run build:json && storybook build",
    "dev:tcm": "tcm -p \"src/**/*.module.css\" -w",
    "build-json:article-id-to-path": "tsx scripts/article/generateIdToPathJson.ts",
    "dev:json-article-id-to-path": "chokidar \"_contents/articles/**/*.md\" \"scripts/article/generateIdToPathJson.ts\" -c \"pnpm run build-json:article-id-to-path\"",
    "build-json-pre-article:tags": "tsx scripts/article/generateTagsJson.ts",
    "dev:json-article-tags": "chokidar \"_contents/tags/**/*.md\" \"scripts/article/generateTagsJson.ts\" -c \"pnpm run build-json-pre-article:tags\"",
    "build-json-article": "tsx scripts/article/generateArticlesJson.ts",
    "dev:json-articles-meta": "chokidar \"_contents/articles/**/*.md\" \"scripts/article/generateArticlesJson.ts\" \"public/generated/meta/tags.json\" -c \"pnpm run build-json-article\"",
    "new-article": "tsx scripts/article/createNewArticle.ts",
    "svg": "svgo --folder ./src/assets --recursive "
  },
  "dependencies": {
    "@next/third-parties": "^15.5.4",
    "next": "^15.5.4",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "schema-dts": "^1.1.5",
    "tocbot": "^4.36.4",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@inquirer/prompts": "^7.8.6",
    "@markuplint/jsx-parser": "^4.7.21",
    "@markuplint/react-spec": "^4.5.21",
    "@next/eslint-plugin-next": "^15.5.4",
    "@storybook/addon-docs": "^9.1.9",
    "@storybook/addon-onboarding": "^9.1.9",
    "@storybook/addon-vitest": "^9.1.9",
    "@storybook/nextjs-vite": "^9.1.9",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@svgr/webpack": "^8.1.0",
    "@types/hast": "^3.0.4",
    "@types/node": "^20.19.19",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/unist": "^3.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^11.29.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.3.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.9",
    "feed": "^5.1.0",
    "globals": "^16.4.0",
    "gray-matter": "^4.0.3",
    "jiti": "^2.6.0",
    "markuplint": "^4.13.1",
    "nanoid": "^5.1.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.55.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-code-titles": "^1.2.0",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "storybook": "^9.1.9",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^38.0.0",
    "svgo": "^4.0.0",
    "tsx": "^4.20.6",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "unist-util-visit": "^5.0.0",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "overrides": {
    "storybook": "$storybook"
  },
  "browserslist": [
    ">0.3%",
    "defaults",
    "fully supports es6-module",
    "maintained node versions"
  ]
}
